{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2019-10-01-preview",
            "name": "myscript",
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "/subscriptions/23d1f8f1-7b90-4108-9ddf-8bd3cca801a1/resourcegroups/sma-rg/providers/Microsoft.ManagedIdentity/userAssignedIdentities/myUserAssignedIdentity": {
                    }
                }
            },
            "properties": {
                "azCliVersion": "2.0.80",
                "timeout": "PT30M",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "P1D",
                "scriptContent": "result=$(az keyvault list); echo $result | jq -c '{Result: map({id: .id})}' > $AZ_SCRIPTS_OUTPUT_PATH"
            }
        }
    ],
    "outputs": {
        "result": {
            "value": "[reference('myscript').outputs]",
            "type": "object"
        }
    }
}